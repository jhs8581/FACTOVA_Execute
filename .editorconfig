# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
charset = utf-8-bom
indent_size = 4
indent_style = space
tab_width = 4

# XAML files
[*.{xaml,xml}]
charset = utf-8
indent_size = 4
indent_style = space

# JSON files
[*.json]
charset = utf-8
indent_size = 2
indent_style = space

# Config files
[*.{config,props,targets,ruleset}]
charset = utf-8
indent_size = 2
indent_style = space
